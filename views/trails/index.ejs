<% include ../partials/header %>
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to TrailBlazer</h1>
      <p>View our handpicked trails from all over the world</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/trails/new">Add New Trail</a>
      </p>
      </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% trails.forEach(function(trail){ %>
      <div class="col-med-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= trail.image %>" alt="<%= trail.name %>">
          <div class="caption">
            <h4><%= trail.name %></h4>
          </div>
          <p>
            <a href="/trails/<%= trail._id %>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <% }); %>
   </div>
<% include ../partials/footer %>

